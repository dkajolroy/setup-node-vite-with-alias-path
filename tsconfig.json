{
    "compileOnSave": false,
    "compilerOptions": {
      "target": "es2017",
      "lib": [
        "es2017",
        "ESNext.AsyncIterable"
      ],
      "typeRoots": [
        "node_modules/@types"
      ],
      "allowSyntheticDefaultImports": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "module": "commonjs",
      "pretty": true,
      "sourceMap": true,
      "declaration": true,
      "outDir": "dist",
      "allowJs": true,
      "noEmit": false,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "baseUrl": ".",
      "paths": {
        "@src/*":["src/*"]
      }
    },
    "include": [
      "src/**/*.ts",
  
    ],
    "exclude": [
      "node_modules",
      "client",
      "dist"
    ]
  }